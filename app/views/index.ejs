        <script>
            (function($) {
                $(window).load(function() {
                    
                    // globals
                    var $nav = $('nav'),
                        $window = $(window),
                        $pullDown = $('.pullDown'),
                        $procedures = $('.procedures'),
                        $loader = $('.loadingContainer');
                       
                    // INIT
                    hcm.init(function() {
                        console.log(hcm);
                        
                        // populate the filter
                        populateProcedures();
                        
                        TweenLite.to($loader, 0.25, {
                            delay: 1.5,
                            opacity: 0,
                            onComplete: function() {
                                $loader.css({
                                    display: 'none'
                                });
                            }
                        });
                    });
                    
                    // events
                    $pullDown.on('click', function(evt) {
                        evt.preventDefault();
                        if($nav.hasClass('down')) {
                            // go back up
                            pullDownUp(function() {
                                console.log('up')
                            });
                        } else {
                            pullDownDown(function() {
                                console.log('down')
                            });
                        }
                    });
                    
                    $procedures.on('change', function(evt) {
                        evt.preventDefault();
                        pullDownUp(function() {
                            // show the loader
                            showLoader(function() {
                                // showing
                                var selected = $(".procedures option:selected");
                                hcm.filterBy(selected.data('code'), function() {
                                    hideLoader(function() {
                                        // done
                                    });
                                });
                            });
                        });
                    });
                    
                    // helpers
                    function showLoader(onComplete) {
                        $loader.css({
                            display: 'block'
                        });
                        
                        TweenLite.to($loader, 0.25, {
                            opacity: 1,
                            onComplete: onComplete
                        });
                    }
                    
                    function hideLoader(onComplete) {
                        TweenLite.to($loader, 0.25, {
                            opacity: 0,
                            onComplete: function() {
                                $loader.css({
                                    display: 'none'
                                });
                                onComplete();
                            }
                        });
                    }
                    
                    function populateProcedures() {
                        for(var i = 0, len = hcm.definitions.length; i < len; i++) {
                            var def = formatDef(hcm.definitions[i].def);
//                            def = def.substr(def.search(/[a-zA-Z ]+/)).replace('W/O', '').replace('CC/MCC', '').replace(' W MCC', '').replace('MCC', '').replace(' W CC', '').replace('- ', '');
                            $procedures.append('<option data-code="'+hcm.definitions[i].code+'">'+def+'</option>');
                        }
                    }
                    
                    function pullDownDown(onComplete) {
                        var w = $window.width(),
                            h = $window.height();
                    
                        var tl = new TimelineLite();
                        
                        tl.to($nav, 0.5, {
                            height: 260,
                            ease: Power2.easeInOut,
                            onComplete: function() {
                                $nav.find('.row').css({
                                    display: 'block'
                                });
                            }
                        });
                        
                        tl.to($nav.find('.row'), 0.25, {
                            opacity: 1,
                            onComplete: function() {
                                $pullDown.addClass('pullDownPulled');
                                $nav.addClass('down');
                                onComplete();
                            }
                        });
                        
                    }
                    
                    function pullDownUp(onComplete) {
                        
                        var tl = new TimelineLite();
                        
                        tl.to($nav.find('.row'), 0.25, {
                            opacity: 0,
                            onComplete: function() {
                                $nav.find('.row').css({
                                    display: 'none'
                                });
                            }
                        });
                        
                        tl.to($nav, 0.5, {
                            height: 10,
                            ease: Power2.easeInOut,
                            onComplete: function() {
                                $pullDown.removeClass('pullDownPulled');
                                $nav.removeClass('down');
                                onComplete();
                            }
                        });
                    }
                    
                });
            })(jQuery);
        </script>

